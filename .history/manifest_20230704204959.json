{
    "manifest_version": 3.1,
    "name": "GPT Cover Letter Generator",
    "version": "1.0",
    "permissions": [
      "storage",
      "activeTab"
    ],
    "action": {
      "default_icon": {
        "16": "icon16.png",
        "48": "icon.png",
        "128": "icon128.png"
      }
    },
    "icons": {
      "16": "icon16.png",
      "48": "icon.png",
      "128": "icon128.png"
    },
    "background": {
      "service_worker": "background.js"
    },
    "content_security_policy": {
      "extension_pages": "script-src 'self'; object-src 'self'; connect-src https://api.openai.com"
    }
  }
  
  
  
  
  